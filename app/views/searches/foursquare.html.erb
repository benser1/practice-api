<h1>foursquare page</h1>

<%= form_tag '/foursquare' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search" %>
<% end %>

<div>
  <% if @venues %>
    <ul>
      <% @venues.each do |venue| %>
        <li>Name: <%= venue['name'] %><br />
        <% if venue['contact']['formattedPhone'] %>
        Phone: <%= venue['contact']['formattedPhone'] %><br />
        <% else %>
        <p>
          No Phone Number Available
        </p>
        <% end %>
        </li><br />
      <% end %>
    </ul>
  <% end %>
</div>
